<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#121212"
    tools:context=".MuscleGroupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trainingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="#121212"
                android:fontFamily="sans-serif-condensed"
                android:text="Abs &amp; Core Day"
                android:textColor="#FFFFFF"
                android:textSize="27sp" />

            <ImageView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/trainingDescription"
                android:layout_toRightOf="@+id/trainingDescription"
                android:contentDescription="@string/todo"
                android:onClick="backToMain"
                app:srcCompat="@drawable/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trainingDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/our_recommendation_is_nfirst_day_upper_and_lower_abs_exercises_1_3_nsecond_day_obliques_exercises_4_5"
            android:textColor="#FFFFFF" />

        <ListView
            android:id="@+id/exerciseListView"
            android:layout_width="fill_parent"
            android:layout_height="598dp"
            android:layout_below="@+id/instructions"
            android:layout_alignEnd="@id/button"
            android:layout_alignRight="@id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:animateLayoutChanges="false"
            android:animationCache="false"
            android:background="#121212"
            android:dividerHeight="5dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
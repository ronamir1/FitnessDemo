<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="fitXY"
        android:src="@drawable/ogo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/element_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FULL BODY WORKOUTS"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/element_2"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="@drawable/recommende_bg"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp">

                    <ImageView
                        android:id="@+id/workout_1"
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:tag="6"
                        android:onClick="muscleGroupMain"
                        app:srcCompat="@drawable/workout_1" />

                    <ImageView
                        android:id="@+id/workout_2"
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:tag="7"
                        android:onClick="muscleGroupMain"
                        app:srcCompat="@drawable/workout_2" />

                    <ImageView
                        android:id="@+id/workout_3"
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:tag="8"
                        android:onClick="muscleGroupMain"
                        app:srcCompat="@drawable/workout_3" />

                    <ImageView
                        android:id="@+id/workout_4"
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:tag="9"
                        android:onClick="muscleGroupMain"
                        app:srcCompat="@drawable/workout_4" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ALL EXCERCISES"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/element_4"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/excercise_bg"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/chest"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="0"
                        app:srcCompat="@drawable/a1" />

                    <ImageButton
                        android:id="@+id/shoulders"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="1"
                        app:srcCompat="@drawable/a2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/element_5"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/excercise_bg"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="2"
                        app:srcCompat="@drawable/b1" />

                    <ImageButton
                        android:id="@+id/biceps"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="3"
                        app:srcCompat="@drawable/b2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/element_6"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/excercise_bg"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/legs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="4"
                        app:srcCompat="@drawable/c1" />

                    <ImageButton
                        android:id="@+id/abs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="5"
                        app:srcCompat="@drawable/c2" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="fitXY"
        android:src="@drawable/ogo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@drawable/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/first_element"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/element_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/group_a"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/muscle_group_a" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/chest"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="0"
                        app:srcCompat="@drawable/a1" />

                    <ImageButton
                        android:id="@+id/shoulders"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="1"
                        app:srcCompat="@drawable/a2" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_element"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:background="@drawable/element_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_element">

                <ImageView
                    android:id="@+id/group_b"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/muscle_group_b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="2"
                        app:srcCompat="@drawable/b1" />

                    <ImageButton
                        android:id="@+id/biceps"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="3"
                        app:srcCompat="@drawable/b2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_element"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:background="@drawable/element_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_element">

                <ImageView
                    android:id="@+id/group_c"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/muscle_group_c" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/legs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="4"
                        app:srcCompat="@drawable/c1" />

                    <ImageButton
                        android:id="@+id/abs"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:onClick="muscleGroupMain"
                        android:scaleType="fitCenter"
                        android:tag="5"
                        app:srcCompat="@drawable/c2" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>